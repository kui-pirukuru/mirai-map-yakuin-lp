---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
import logo_sp from "../assets/logo_sp.png";
import head_tel_sp from "../assets/head_tel_sp.svg";
import head_email_sp from "../assets/head_email_sp.svg";
---

<div class="bg-white pb-2">
	<!-- 通常ヘッダー -->
	<div class="flex justify-center items-center w-full">
		<div class="justify-between hidden md:pt-4 md:flex md:w-[868px]">
			<div class="flex items-center">
				<Image
					src={logo}
					alt="説明文"
					width={240}
					quality={100}
					format="png"
				/>
			</div>
			<div class="flex text-black text-xs font-bold items-center mb-1.5">
				ご相談は無料です<br />まずはお問い合わせください
			</div>
			<div class="font-black">
				<div class="text-sm">お電話からご予約</div>
				<div class="text-2xl h-[20px] leading-4">☎ 082-507-3230</div>
				<div class="text-xs">
					ご予約・お問い合わせ：平日 9:00～18:00
				</div>
			</div>
			<div class="flex items-center">
				<a href="#contact">
					<button
						type="button"
						class="text-white bg-[#FF8A22] hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-10 md:px-5 py-2.5 text-center"
						>WEBからご予約</button
					></a
				>
			</div>
		</div>
	</div>

	<!-- モバイルヘッダー -->
	<div class="flex justify-between md:hidden px-5 pt-5 mb-5 bg-white">
		<Image src={logo_sp} alt="説明文" width={200} class="" />
		<div class="flex">
			<a href="tel:0825073230" class="p-2">
				<Image src={head_tel_sp} alt="説明文" width={60} />
			</a>
			<a href="#contact" class="p-2 py-3">
				<Image src={head_email_sp} alt="説明文" width={60} />
			</a>
		</div>
	</div>
</div>
