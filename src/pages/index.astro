---
import Layout from "../layouts/Layout.astro";
import MailForm from "../components/MailForm.astro";
import QuesionItem from "../components/QuesionItem.astro";
import ContactButton from "../components/ContactButton.astro";
import ThreeFeatures from "../components/ThreeFeatures.astro";
import ShahoDietPlan from "../components/ShahoDietPlan.astro";
import SakugenSeikou from "../components/SakugenSeikou.astro";
import Dounyuu from "../components/Dounyuu.astro";
import Header from "../components/Header.astro";
import Kokuban from "../components/Kokuban.astro";
import Koudo from "../components/Koudo.astro";
import Nayami from "../components/Nayami.astro";
import Item01 from "../components/Item01.astro";
import Item02 from "../components/Item02.astro";
import Item03 from "../components/Item03.astro";
import Item04 from "../components/Item04.astro";
import Item05 from "../components/Item05.astro";
import Item06 from "../components/Item06.astro";
import Item07 from "../components/Item07.astro";
import Item08 from "../components/Item08.astro";
import Item09 from "../components/Item09.astro";
import Item10 from "../components/Item10.astro";
import Question from "../components/Question.astro";

import { Image } from "astro:assets";
import kokuho from "../assets/bnn_kokuho_s.jpg";
import fax from "../assets/fax.svg";
import shaho from "../assets/bnn_shaho_s.jpg";
import yakuin from "../assets/bnn_yakuin_s.jpg";
import offer_01_pc from "../assets/offer_01_pc.png";
---

<Layout
	title="決算前の節税秘策、全額損金で役員報酬（定期同額給与）の一括支給が効果的"
>
	<main class="flex flex-col justify-center items-center w-full">
		<div class="w-full pb-2">
			<Header />
			<Item01 />
			<Item02 />
			<Item03 />
			<Item04 />
			<Item05 />
			<Item06 />
			<Item07 />
			<Item08 />
			<Question />
			<Item09 />
			<Item10 />

			<div class="bg-white">
				<div class="flex flex-col items-center">
					<Image
						src={offer_01_pc}
						alt="説明文"
						height={200}
						class="absolute px-5"
					/>
					<div
						class="flex bg-[#E5555F] justify-center items-center w-full mt-[130px] sm:mt-[160px] flex-wrap py-10 px-5 text-center"
					>
						<div
							class="text-[#FFD618] font-bold w-[340px] text-center"
						>
							<div class="text-4xl">保険料節減相談が</div>
							<div class="text-7xl mt-5 pl-8">無料！</div>
						</div>
						<div
							class="text-lg sm:text-2xl font-bold text-white md:w-[600px] py-5 md:leading-10"
						>
							保険料節減の無料相談は、広島県・福岡県・岡山県・山口県・大阪府・兵庫県限定です。直接面談･電話･メールなど様々な方法で、無料相談および試算を行っておりますので、ご希望の方法をお申し付けください。まずは下記より受付のご連絡をお願いいたします。
						</div>
					</div>
				</div>
			</div>
			<div class="bg-white">
				<div
					id="contact"
					class="text-black text-center py-5 flex flex-col justify-center items-center mx-1"
				>
					<div class="text-2xl sm:text-4xl font-black text-[#0588AF]">
						無料相談・お問い合わせ<br />受付フォーム
					</div>
					<div class="text-md mt-5 comment">
						無料相談、お問い合わせは下記フォームに<br
						/>ご入力のうえ、送信をお願いいたします。
					</div>
					<div class="pt-2 mb-4">
						お申込み後に、<br
							class="md:hidden"
						/>自動返信メールが届きますので、<br
							class="md:hidden"
						/>内容をご確認ください。
					</div>
					<div
						class="w-[340px] sm:w-[640px] border-4 border-[#088DB4] rounded-lg px-2 py-4 flex flex-col sm:flex-row sm:justify-center sm:items-center"
					>
						<div class="flex flex-col gap-0.5">
							<div class="text-lg font-bold">
								お電話からご予約・お問い合わせ
							</div>
							<div class="text-4xl font-black text-[#0588AF]">
								☎<span class="px-1">082-507-3230</span>
							</div>
							<div class="font-bold">平日 9:00 ～ 18:00</div>
						</div>
						<hr
							class="flex sm:hidden h-px my-2 bg-[#088DB4] border-0"
						/>
						<div
							class="hidden sm:flex bg-[#088DB4] h-20 w-0.5 sm:mx-6"
						>
						</div>
						<div>
							<div class="text-lg font-bold">
								Faxからご予約・お問い合わせ
							</div>
							<div
								class="text-4xl font-black text-[#0588AF] flex items-center justify-center"
							>
								<Image src={fax} alt="説明文" height={50} />
								<div>082-507-3231</div>
							</div>
							<div class="font-bold">24時間受付中</div>
						</div>
					</div>
					<div
						class="text-sm font-bold text-red-500 leading-6 text-left px-5"
					>
						※お申込みは<br
							class="md:hidden"
						/>広島県・福岡県・岡山県・山口県・大阪府・兵庫県限定です。<br
						/>
					</div>
				</div>
			</div>
			<div class="bg-white flex justify-center flex-col items-center">
				<MailForm />
				<div class="bg-[#333333] w-full">
					<div
						class="px-5 flex justify-center gap-10 py-10 flex-wrap"
					>
						<a href="https://mirai-map.jp/lp-syaho/">
							<Image src={shaho} alt="説明文" width={210} /></a
						><a href="#">
							<Image src={yakuin} alt="説明文" width={210} /></a
						><a href="https://mirai-map.jp/lp2208/">
							<Image src={kokuho} alt="説明文" width={210} /></a
						>
					</div>
				</div>
				<div class="text-xl font-sans text-center mt-5 mb-8 px-5">
					Copyright © みらいマップ株式会社 <br
						class="md:hidden"
					/>All rights reserved.
				</div>
			</div>
		</div>
	</main>

	<style>
		main {
			/* padding: 1rem; */
			/* width: 800px; */
			/* max-width: calc(100% - 2rem); */
			/* color: black; */
			/* font-size: 20px; */
		}
		/* h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	} */
		ul {
			list-style: "-";
		}
		.comment {
			font-family: "Noto Sans JP", "游ゴシック体", YuGothic,
				"游ゴシック Medium", "Yu Gothic Medium", "游ゴシック",
				"Yu Gothic", "メイリオ", sans-serif;
		}

		.triangle-down {
			background: #ffa200;
			height: calc(tan(60deg) * 40px / 2);
			width: 100px;
			clip-path: polygon(0 0, 100% 0, 50% 100%);
		}
		.triangle-right {
			background: #ffa200;
			height: calc(tan(60deg) * 60px / 2);
			width: 15px;
			clip-path: polygon(0 0, 100% 50%, 0 100%);
		}
		.logo_background_white {
			background: linear-gradient(
				180deg,
				#00000000 0%,
				#00000000 80%,
				#fff 80%,
				#fff 100%
			);
		}
	</style>
</Layout>
